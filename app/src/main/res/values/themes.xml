<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TravelManager" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/yellow_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/gray_secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSurface">@color/gray_surface</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorError">@color/red_error</item>
        <item name="colorOnError">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.TravelManager" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/yellow_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/gray_secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSurface">@color/gray_surface</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.TravelManager.titre">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/yellow_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.TravelManager.boutonJaune">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/yellow_primary</item>
    </style>

    <style name="Theme.TravelManager.boutonBlanc">
        <item name="android:textColor">@color/yellow_primary</item>
        <item name="android:background">@color/white</item>
    </style>

    <color name="yellow_primary">#FFCC00</color>
    <color name="gray_secondary">#727170</color>
    <color name="gray_surface">#F5F5F5</color>
    <color name="gray_text">#4A4A4A</color>
    <color name="white">#FFFFFF</color>
    <color name="black">#000000</color>
    <color name="red_error">#FF5252</color>
</resources>
